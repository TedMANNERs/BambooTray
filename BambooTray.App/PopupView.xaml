<Window x:Class="BambooTray.PopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:BambooTray.App"
        Visibility="Hidden" ShowInTaskbar="False">
    <Window.DataContext>
        <local:PopupViewModel />
    </Window.DataContext>
    <tb:TaskbarIcon IconSource="Resources/bamboo.ico"
                    PopupActivation="LeftOrRightClick">
        <tb:TaskbarIcon.TrayPopup>
            <Border>
                <ListBox>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </tb:TaskbarIcon.TrayPopup>
    </tb:TaskbarIcon>
</Window>
